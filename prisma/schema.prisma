generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Category {
  Mobile 
  Tablet
  Watch
  Others
}

model Product {
  id String @id @default(uuid())
  name String
  description String?
  category Category
  price Float? @default(0.0)
  quantity Int? @default(0)
  images Image[]
}


model Image {
  id String @id @default(uuid())
  image String
  product Product? @relation(fields: [productId],references: [id])
  productId String? 
}
